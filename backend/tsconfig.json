{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "esModuleInterop": true,
    "lib": ["es5", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "target": "es6",
    "types": ["node"],
    "baseUrl": "./src",
    "paths": {
      "@routes/*": ["./routes/*"],
      "@controllers/*": ["./controllers/*"]
    }
  },
  "include": ["./src/**/*", "**/*.ts"],
  "exclude": ["node_modules"]
}
